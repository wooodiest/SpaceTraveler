<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription, RtlHardcoded, HardcodedText"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_background_items"
    tools:context=".Display4ExpeditionMissionFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/txvMainDisplayTutorialText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_transparent60_background_valuable_items"
                android:gravity="center"
                android:padding="7dp"
                android:layout_marginBottom="10dp"
                android:text="Welcome to the world!!! At the beginning of your adventure, click on the screen to get coins. They will be needed for further space exploration."
                android:visibility="gone">

            </TextView>
            <TextView
                android:id="@+id/txvMainGameDisplayExpeditionMissionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_transparent60_background_valuable_items"
                android:padding="7dp"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="6. The first spacecraft to reach the vicinity of Earth's Moon">

            </TextView>
            <TextView
                android:textSize="13sp"
                android:id="@+id/txvMainGameDisplayExpeditionMissionDescription"
                android:layout_width="match_parent"
                android:text="Luna 1 was the first spacecraft to reach the Moon, and the first of a series of Soviet automatic interplanetary stations successfully launched in the direction of the Moon. The spacecraft was sphere-shaped. Five antennae extended from one hemisphere. Instrument ports also protruded from the surface of the sphere. There were no propulsion systems on the Luna 1 spacecraft itself. The primary objectives of the mission were to measure temperature and pressure inside the vehicle; study the gas components of interplanetary matter and corpuscular radiation of the Sun; measure the magnetic fields of the Earth and moon; study meteoric particles in space; study the distribution of heavy nuclei in primary cosmic radiation; and study other properties of cosmic rays."
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_background_text_white"
                android:padding="10dp"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_transparent30_background_valuable_items"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txvMainGameDisplayExpeditionMissionRequiredResources"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_background_text_white"
                    android:text="Required resources: ">

                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMainGameDisplayExpeditionMissionRequiredResources"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:minHeight="250dp"
                    tools:itemCount="5">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_transparent30_background_valuable_items"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txvMainGameDisplayExpeditionMissionReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_background_text_white"
                    android:text="Rewards: ">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rounded_background_text_white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/molecule">

                        </ImageView>

                        <TextView
                            android:id="@+id/txvMainGameDisplayExpeditionMissionRewardMolecule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:text="10">

                        </TextView>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rounded_background_text_white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/emerald">

                        </ImageView>

                        <TextView
                            android:id="@+id/txvMainGameDisplayExpeditionMissionRewardEmerald"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:text="25">

                        </TextView>
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txvMainGameDisplayExpeditionMissionAccept"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Accept Mission"
                android:gravity="center"
                android:textSize="23sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button_purple_background">

            </TextView>

        </LinearLayout>
    </ScrollView>


</FrameLayout>